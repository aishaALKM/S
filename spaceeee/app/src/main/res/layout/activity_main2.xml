<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hgh"
    tools:context=".MainActivityPage3$ScrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="362dp"
            android:layout_height="171dp"
            android:layout_margin="30dp"
            android:text="NASA Television to Air Departure of Northrop Grumman’s Cygnus from Space Station"
            android:textColor="#FDE5E5"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/imageView"
            android:layout_width="443dp"
            android:layout_height="325dp"
            app:srcCompat="@drawable/nasa" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="362dp"
            android:layout_height="171dp"
            android:layout_margin="30dp"
            android:text=" Prototypes NASA Could Develop in Missions to the Moon, Mars,"
            android:textColor="#FDE5E5"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/imageView2"
            android:layout_width="432dp"
            android:layout_height="357dp"
            app:srcCompat="@drawable/l" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="362dp"
            android:layout_height="141dp"
            android:layout_margin="30dp"
            android:text="Infuses Software into Blue Origin Landing Tech"
            android:textColor="#FDE5E5"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/imageView3"
            android:layout_width="437dp"
            android:layout_height="310dp"
            app:srcCompat="@drawable/p" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="362dp"
            android:layout_height="141dp"
            android:layout_margin="30dp"
            android:text="Shining New Light on Landing Sites"
            android:textColor="#FDE5E5"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/imageView4"
            android:layout_width="462dp"
            android:layout_height="343dp"
            app:srcCompat="@drawable/moon" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="362dp"
            android:layout_height="141dp"
            android:layout_margin="30dp"
            android:text="NASA’s Webb Telescope"
            android:textColor="#FDE5E5"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:background="@drawable/web"
            android:backgroundTint="#0C0A0A"
            app:srcCompat="@drawable/web" />


    </LinearLayout>
</ScrollView>